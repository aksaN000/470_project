# MemeStack Backend Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# For local MongoDB installation:
MONGODB_URI=mongodb://localhost:27017/memestack

# For MongoDB Atlas (cloud database):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/memestack

# JWT Secret Key (Change this to a random string in production!)
JWT_SECRET=memestack-super-secret-jwt-key-change-in-production

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# CORS Configuration (Frontend URL)
CLIENT_URL=http://localhost:3000
